<div class="row">
  <div class="col-md-6 offset-md-3">
    <h3>ブランド登録･編集<%= @check %></h3>
    <div class="new-brand-btn">
      <div class="new-brand-item-left" data-toggle="modal" data-target="#new-brand-modal">
        <%= new_brand_btn %>
      </div>
      <div class="new-brand-item-left">
        <%= delete_brand_btn %>
      </div>
      <div class="new-brand-item-right">
        <%= link_to '並べ替え', index_sort_brands_path, class: "btn btn-sm btn-navy", data: { "turbolinks": false } %>
      </div>
    </div>

    <table class="table table-sm table-sortable">
      <thead>
        <tr w-auto class="bg-light">
          <th></th>
          <th>No.</th>
          <th><%= Brand.human_attribute_name :name %></th>
          <th></th>
        </tr>
      </thead>

      <tbody>
        <% unless params[:id] %>
          <%= form_tag({ controller: :brands, action: :destroy_all }, id: "delete-brand", method: 'delete') do %>
            <% @brands.each do |brand| %>
              <tr>
                <td><%= check_box_tag 'brands[]',brand.id %></td>
                  <td class="table-number"><%= @heading_number += 1 %>&emsp;</td>
                  <td><%= brand.name %></td>
                <td>
                  <%= link_to brands_path(id: brand), local: true, method: :get do %>
                    <i class="far fa-edit"></i>
                  <% end %>
                </td>
              </tr>
            <% end %>
          <% end %>
        <% else %>
          <% @brands.each do |brand| %>
            <tr>
              <td><%= check_box_tag '', 'true', false, disabled: true %></td>
                <td class="table-number"><%= @heading_number += 1 %>&emsp;</td>
                <td><%= edit_brand_form(brand) %></td>
              <td>
                <% if @brand.id == brand.id %>
                  <%= link_to brands_path do %>
                    <i class="far fa-window-close"></i>
                  <% end %>
                <% else %>
                  <%= link_to brands_path(id: brand), local: true, method: :get do %>
                    <i class="far fa-edit"></i>
                  <% end %>
                <% end %>
              </td>
            </tr>
          <% end %>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<%= render 'new' %>
