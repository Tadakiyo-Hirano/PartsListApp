<div id="pageBase">
  <div class="login">
    <h1 class="logo">
      <img src="/top_logo.png" alt="PARTS LIST", class="title-logo">
    </h1>
  </div>
</div>

<div class="center">
  <div class="user-login-form">
    <div class="user-login-field-group">
      <P>ログイン</P>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field">
          <%= f.email_field :email, placeholder: "#{User.human_attribute_name :email}", autofocus: true, autocomplete: "email", class: "form-control form-control-sm" %>
        </div>

        <div class="field">
          <%= f.password_field :password, placeholder: "#{User.human_attribute_name :password}", autocomplete: "current-password", class: "form-control form-control-sm                                                                                                       " %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me, style: "font-size: smaller; font-weight: normal;" %>
          </div>
        <% end %>

        <div class="actions">
          <%= f.submit "ログイン", class: "btn btn-sm btn-block btn-original shadow" %>
        </div>
      <% end %>
    </div>
  </div>

  <div class="user-login-form">
    <div class="user-login-field-group">
      <P class="small">Googleアカウントをお持ちの方</P>

      <div class="shared-links">
        <%= render "users/shared/links" %>
      </div>
    </div>
  </div>
</div>

<div class="flash_messages col-md-6 offset-md-3">
  <% flash.each do |key, value| %>
    <p class="alert alert-danger">
      <%= value %>
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </p>
  <% end %>
</div>