<div id="pageBase">
  <div class="login">
    <h1 class="logo"><img src="/top_logo.png" alt="PARTS LIST"></h1>
  </div>
</div>

<div class="row center">
  <div class="user-password-form col col-md-6 offset-md-3">
    <div class="field-group">
      <h2>パスワード再設定</h2>

      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
        <%= render "users/shared/error_messages", resource: resource %>
        <%= f.hidden_field :reset_password_token %>

        <div class="field">
          <%= f.label :password, "新しいパスワード" %>
          <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> 文字以上)</em><br />
          <% end %>
          <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "form-control" %>
        </div>

        <div class="field">
          <%= f.label :password_confirmation, "確認用パスワード" %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
        </div>

        <div class="actions">
          <%= f.submit "パスワードを再設定する" , class: "btn btn-block btn-navy", data: { disable_with: '送信中' } %>
        </div>
      <% end %>

      <div class="shared-links">
        <%= render "users/shared/links" %>
      </div>

    </div>
  </div>
</div>