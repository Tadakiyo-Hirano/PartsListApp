<div class="card card-dark">
  <div class="card-header">
    <h3 class="card-title">
      <i class="fas fa-phone-alt nav-icon"></i>
      不具合報告
    </h3>
  </div>
  <div class="card-body">
    <%= form_with model: @contact, url: admins_contacts_path, method: :post, remote: true do |f|  %>
      <div class="field">
        <%= f.label :name %>
        <%= f.text_field :name, placeholder: "30文字以内", class: "form-control form-control-sm" %>
      </div>

      <div class="field">  
        <%= f.label :content %>
        <%= f.text_area :content, placeholder: "1000文字以内", rows: "10", class: "form-control form-control-sm" %>
      </div>

      <div class="field right">
        <%= f.submit submit_text, class: "btn btn-sm btn-original shadow w-25", data: { disable_with: '送信中' } %>
      </div>
    <% end %>
  </div>
</div>
