<div class="modal-dialog modal-lg" role="document">
  <div class="modal-content">
    <div class="modal-header">
      <h5 class="modal-title" id="edit-user-modal-label">
        <i class="fas fa-users nav-icon"></i>
        &nbsp;
        ユーザー情報修正
      </h5>
      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>

    <div class="modal-body">
      <div class="col col-md-12">
        <%= form_with model: @user, url: admins_user_path, id: "edit-user-btn", method: :patch, local: true do |f|  %>
          <table class="table table-sm table-bordered">
            <tbody>
              <tr>
                <th width="25%"><%= User.human_attribute_name :id %></th>
                <td><%= @user.id %></td>
              </tr>
              <tr>
                <th><%= User.human_attribute_name :name %></th>
                <td><%= f.text_field :name, required: true, class: "form-control-sm form-control" %></td>
              </tr>
              <tr>
                <th><%= User.human_attribute_name :company_name %></th>
                <td><%= f.text_field :company_name, class: "form-control-sm form-control" %></td>
              </tr>
              <tr>
                <th><%= User.human_attribute_name :email %></th>
                <td><%= @user.email %></td>
              </tr>
              <tr>
                <th><%= User.human_attribute_name :account_level %></th>
                <td><%= f.select :account_level, User.account_levels.keys.map { |k| [k, k] }, {}, { class: "form-control-sm form-control" } %></td>
              </tr>
            </tbody>
          </table>
        <% end %>
      </div>
    </div>

    <div class="modal-footer">
      <button type="button" class="btn btn-sm btn-secondary w-25" data-dismiss="modal">閉じる</button>
      <%= button_tag submit_text, class: "btn btn-sm btn-original shadow w-25", form: "edit-user-btn", data: { disable_with: '送信中' } %>
    </div>
  </div>
</div>