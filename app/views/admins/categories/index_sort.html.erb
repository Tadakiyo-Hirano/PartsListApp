<div class="card card-dark">
  <div class="card-header">
    <h3 class="card-title">
      <i class="fas fa-tractor nav-icon"></i>
      &nbsp;
      <%= Category.human_attribute_name :name %>並べ替え
    </h3>
  </div>
  <div class="card-body">

    <div class="col-md-8 offset-md-2">
      <div class="new-category-btn">
        <p style="font-size: small;">ドラッグ＆ドロップで上下に並べ替えができます。</p>
        <div class="new-category-item-right">
          <%= link_to '戻る', admins_categories_path, class: "btn btn-sm btn-secondary", data: { "turbolinks": false } %>
        </div>
      </div>
    
      <table class="table table-sm table-sortable table-striped">
        <thead class="table-dark">
          <tr w-auto>
            <th></th>
            <th>No.</th>
            <th><%= Category.human_attribute_name :name %></th>
          </tr>
        </thead>
    
        <tbody>
          <% @categories.each do |category| %>
            <tr id="category-<%= category.id %>" class="item" data-model_name="<%= category.class.name.underscore %>" data-update_url="<%= admins_category_sort_path(category) %>" data-method="post">
              <td></td>
              <td class="w-100px"><%= @heading_number += 1 %></td>
              <td class="w-360px"><%= category.name %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    
  </div>
</div>
