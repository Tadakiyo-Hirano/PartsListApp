<div class="modal fade" data-backdrop="static" id="new-category-modal" tabindex="-1" role="dialog" aria-hidden="true">
  <div class="modal-dialog modal-sm" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="new-category-modal-label">
          <i class="fas fa-tractor nav-icon"></i>
          &nbsp;
          <%= Category.human_attribute_name :name %>登録
        </h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>

      <div class="modal-body">
        <%= form_with model: @category, url: admins_categories_path, method: :post, remote: true do |f|  %>
          <div class="form-group">
            <div class="field">
              <%= f.text_field :name, placeholder: "20文字以内", required: true, maxlength: "20", class: "form-control form-control-sm" %>
            </div>

            <div class="field">
              <%= f.submit '登録', class: "btn btn-sm btn-original shadow w-100", data: { disable_with: '送信中' } %>
            </div>
          </div>
        <% end %>
      </div>

      <div class="modal-footer">
        <button type="button" class="btn btn-sm btn-secondary shadow" data-dismiss="modal">閉じる</button>
      </div>
    </div>
  </div>
</div>
