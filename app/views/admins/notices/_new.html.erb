<div class="modal-dialog" role="document">
  <div class="modal-content">
    <div class="modal-header">
      <h5 class="modal-title" id="new-notice-modal-label">
        <i class="far fa-comment-dots nav-icon"></i>
        &nbsp;
        お知らせ登録
      </h5>
      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>

    <div class="modal-body">
      <%= form_with model: @notice, url: admins_notices_path, id: "new-notice-btn", method: :post, remote: true do |f|  %>
        <%= render "form", f: f %>
      <% end %>
    </div>

    <div class="modal-footer">
      <button type="button" class="btn btn-sm btn-secondary shadow w-25" data-dismiss="modal">閉じる</button>
      <%= button_tag submit_text, class: "btn btn-sm btn-original shadow w-25", form: "new-notice-btn", data: { disable_with: '送信中' } %>
    </div>
  </div>
</div>
