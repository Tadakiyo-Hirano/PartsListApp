<div class="row">
  <div class="col-md-8 offset-md-2">
    <h3>パーツカタログ</h3>
  <div class="new-product-btn">
    <div class="new-product-item-left">
      <!--
      <%= link_to '新規', new_product_path, remote: true, class: "btn btn-sm btn-navy" %>
      -->
    </div>
  </div>

  <table id="table-navy" class="table table-sm table-striped">
    <thead class="bg-navy" style="color: #fff;">
      <tr>
        <th><%= Product.human_attribute_name :model %></th>
        <th>PDF</th>
        <th><%= Category.human_attribute_name :name %></th>
        <th><%= Brand.human_attribute_name :name %></th>
      </tr>
    </thead>
    
    <tbody>
      <% @products.each do |product| %>
        <tr>
          <td><%= product.model %></td>
          <td><%= document_link(product.document) %></td>
          <td><%= Category.find(product.category_id).name %></td>
          <td><%= Brand.find(product.brand_id).name %></td>
          <!--
          <td>
            <%= link_to edit_product_path(product), remote: true do %>
              <i class="fas fa-pencil-alt"></i>
            <% end %>
          </td>
          <td>
            <%= link_to product_path(product), method: :delete, id: "trash-icon-#{product.id}", data: { disable_with: "送信中", confirm: '選択したパーツカタログを削除しますか？' } do %>
              <i class="fas fa-trash-alt"></i>
            <% end %> 
          </td>
          -->
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

