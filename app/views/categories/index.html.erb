<div>
  <h3>カテゴリー登録･編集</h3>
  <%= form_tag({ controller: :categories, action: :destroy_all }, method: 'delete') do %>
    <div class="new-category-btn">
      <%= link_to '新規', new_category_path, class: "btn btn-sm btn-primary" %>
      <%= submit_tag '削除', class: "btn btn-sm btn-danger" %>
    </div>

    <table class="table table-sm">
      <thead>
        <tr class="bg-light">
          <th></th>
          <th><%= Category.human_attribute_name :id %></th>
          <th><%= Category.human_attribute_name :name %></th>
        </tr>
      </thead>

      <tbody>
        <% @categories.each do |category| %>
            <tr>
              <td><%= check_box_tag 'categories[]',category.id %></td>
              <td><%= category.id %></td>
              <td><%= link_to category.name, category_path(category) %></td>
            </tr>
        <% end %>
      </tbody>
    </table>
  <% end %>
</div>