        <li class="nav-item menu-open">
          <a href="#" class="nav-link active">
            <i class="nav-icon fas fa-book"></i>
            <p>
              パーツリスト管理
              <i class="right fas fa-angle-left"></i>
            </p>
          </a>
          <ul class="nav nav-treeview">
            <li class="nav-item">
              <a href="<%= admins_products_path %>" class="nav-link active">
                <i class="far fa-file nav-icon"></i>
                <p>パーツリスト</p>
              </a>
            </li>

            <li class="nav-item">
              <a href="<%= admins_brands_path %>" class="nav-link active">
                <i class="far fa-copyright nav-icon"></i>
                <p><%= Brand.human_attribute_name :name %></p>
              </a>
            </li>

            <li class="nav-item">
              <a href="<%= admins_categories_path %>" class="nav-link active">
                <i class="fas fa-tractor nav-icon"></i>
                <p><%= Category.human_attribute_name :name %></p>
              </a>
            </li>

            <!--
            <li class="nav-item">
              <a href="#" class="nav-link">
                <i class="far fa-circle nav-icon"></i>
                <p>Inactive Page</p>
              </a>
            </li>
            -->
          </ul>
        </li>

        <li class="nav-item menu-open">
          <a href="#" class="nav-link active">
            <i class="nav-icon fas fa-user-circle"></i>
            <p>
              ユーザー管理
              <i class="right fas fa-angle-left"></i>
            </p>
          </a>
          <ul class="nav nav-treeview">
            <li class="nav-item">
              <a href="<%= admins_users_path %>" class="nav-link active">
                <i class="fas fa-users nav-icon"></i>
                <p>ユーザー</p>
              </a>
            </li>
          </ul>
        </li>

        <li class="nav-item menu-open">
          <a href="#" class="nav-link active">
            <i class="nav-icon fas fa-mail-bulk"></i>
            <p>
              お知らせ管理
              <i class="right fas fa-angle-left"></i>
            </p>
          </a>
          <ul class="nav nav-treeview">
            <li class="nav-item">
              <a href="#" class="nav-link active">
                <i class="far fa-comment-dots nav-icon"></i>
                <p>お知らせ</p>
              </a>
            </li>
          </ul>
        </li>

        <li class="nav-item menu-open">
          <a href="#" class="nav-link active">
            <i class="nav-icon fas fa-cog"></i>
            <p>
              システム管理
              <i class="right fas fa-angle-left"></i>
            </p>
          </a>
          <ul class="nav nav-treeview">
            <li class="nav-item">
              <a href="#" class="nav-link active">
                <i class="fas fa-phone-alt nav-icon"></i>
                <p>不具合報告</p>
              </a>
            </li>
          </ul>
        </li>

        <li class="nav-header"></li>

        <li class="nav-item">
          <%= link_to destroy_admin_session_path, method: :delete, class: "nav-link" do %>
            <i class="fas fa-sign-out-alt nav-icon"></i>
            <p>ログアウト</p>
          <% end %>
        </li>
      </ul>
    </nav>
    <!-- /.sidebar-menu -->
  </div>
  <!-- /.sidebar -->
</aside>



